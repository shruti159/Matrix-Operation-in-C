#include <stdio.h>

int main() {
    int i, j, k;
    int choice;
    int Matrix1[2][2] = {{2, 4}, {1, 3}};
    int Matrix2[2][2] = {{2, 4}, {6, 7}};
    int sum[2][2], mul[2][2], trans[2][2];

    printf("\n--------- Operations On Matrix ---------\n");
    printf("1. Matrix Addition\n2. Matrix Multiplication\n3. Matrix Transpose (of Matrix1)\n4. Exit\n");

    do {
        printf("\nEnter Your Choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            // Addition
            for (i = 0; i < 2; i++) {
                for (j = 0; j < 2; j++) {
                    sum[i][j] = Matrix1[i][j] + Matrix2[i][j];
                }
            }
            printf("Result of Matrix Addition:\n");
            for (i = 0; i < 2; i++) {
                for (j = 0; j < 2; j++) {
                    printf("%d ", sum[i][j]);
                }
                printf("\n");
            }
            break;

        case 2:
            // Multiplication
            for (i = 0; i < 2; i++) {
                for (j = 0; j < 2; j++) {
                    mul[i][j] = 0;
                    for (k = 0; k < 2; k++) {
                        mul[i][j] += Matrix1[i][k] * Matrix2[k][j];
                    }
                }
            }
            printf("Result of Matrix Multiplication:\n");
            for (i = 0; i < 2; i++) {
                for (j = 0; j < 2; j++) {
                    printf("%d ", mul[i][j]);
                }
                printf("\n");
            }
            break;

        case 3:
            // Transpose of Matrix1
            for (i = 0; i < 2; i++) {
                for (j = 0; j < 2; j++) {
                    trans[j][i] = Matrix1[i][j];
                }
            }
            printf("Transpose of Matrix1:\n");
            for (i = 0; i < 2; i++) {
                for (j = 0; j < 2; j++) {
                    printf("%d ", trans[i][j]);
                }
                printf("\n");
            }
            break;

        case 4:
            printf("Exiting...\n");
            break;

        default:
            printf("Invalid Input! Try again.\n");
        }
    } while (choice != 4);

    return 0;
}
